# OpenSubtitles API 配置
OPENSUBTITLES_API_KEY=your_opensubtitles_api_key_here

# Turso 資料庫配置
TURSO_URL=libsql://your-database-url.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Gemini AI 配置 (可選)
GEMINI_API_KEY=your_gemini_api_key_here

# 應用程式配置
APP_NAME=SubtitleLingo API
APP_VERSION=1.0.0
DEBUG=false

# 速率限制配置
OPENSUBTITLES_RATE_LIMIT=4
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# 資料庫配置
DB_POOL_SIZE=5
DB_TIMEOUT=10